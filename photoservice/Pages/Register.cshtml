@page
@model photoservice.Pages.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h2>Rejestracja</h2>

<form method="post">
    <div class="form-group">
        <label for="FirstName">Imię</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" asp-for="RegisterRequest.FirstName" />
        <span asp-validation-for="RegisterRequest.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="LastName">Nazwisko</label>
        <input type="text" id="LastName" name="LastName" class="form-control" asp-for="RegisterRequest.LastName" />
        <span asp-validation-for="RegisterRequest.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">E-mail</label>
        <input type="email" id="Email" name="Email" class="form-control" asp-for="RegisterRequest.Email" />
        <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Numer telefonu</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" asp-for="RegisterRequest.PhoneNumber" />
        <span asp-validation-for="RegisterRequest.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password">Hasło</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="RegisterRequest.Password" />
        <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zarejestruj się</button>

    <!-- Wiadomość o zajętym mailu albo numerze telefonu -->
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
