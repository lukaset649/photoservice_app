@page
@model photoservice.Pages.UsersModel

@{
    ViewData["Title"] = "Active Users with Roles";
}

<h1>Active Users with Roles</h1>

<!-- Formularz wyszukiwania -->
<form method="get">
    <div class="form-group">
        <label for="searchQuery">Search by Name (First Name or Last Name):</label>
        <input type="text" id="searchQuery" name="searchQuery" class="form-control" value="@Model.SearchQuery" placeholder="Enter name..." />
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>

<br />

<!-- Tabela wyświetlająca użytkowników -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>
                <a href="?searchQuery=@Model.SearchQuery&sortByRole=@(!Model.SortByRole)" class="text-decoration-none">
                    Role
                    @if (Model.SortByRole)
                    {
                        <i class="bi bi-arrow-down-up"></i> <!-- Ikona do sortowania -->
                    }
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ActiveUsers != null && Model.ActiveUsers.Count > 0)
        {
            foreach (var user in Model.ActiveUsers)
            {
                <tr>
                    <td>@user.IdUser</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.RoleName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
